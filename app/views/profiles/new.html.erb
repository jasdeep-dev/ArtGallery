<h1>Artist Form</h1>
<%= form_with scope: @profile, url: :profiles, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description  %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>